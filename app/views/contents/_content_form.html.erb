
<%= form_for content, url: path do |f| %>

    <%= f.label :type, "Type" %><br>
    <%= f.select :data_type, Content.data_types %><br>
    
    <%= f.label :data, "Content" %><br>
    <%= f.text_area :data %><br>
    <% if f.object.data %>
        <%= f.submit "update" %>
        <%= f.submit :delete %>
    <% else %>
        <%= f.submit %>
    <% end %>

<% end %>