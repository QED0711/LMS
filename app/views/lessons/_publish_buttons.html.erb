
<div class="lesson-buttons">

    <% if !lesson.published %>
        <%= button_to "Publish", "/lessons/#{lesson.id}/publish", params: {publish: true} %>
    <% else %>
        <%= button_to "Unpublish", "/lessons/#{lesson.id}/publish", params: {publish: false} %>
    <% end %>

        <%= button_to "Edit Lesson", edit_lesson_path(lesson), method: :get %>
        <%= button_to "Delete Lesson",delete_lesson_path(lesson), method: :delete %>
</div>